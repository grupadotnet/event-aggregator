@{
    ViewData["Title"] = "Kreator wydarzenia";
}


@model Event_Aggregator.Models.Event





<form asp-controller="MyEvents" asp-action="AddEvent" method="post">
    <div asp-validation-summary="All"></div>

    <p>
        <span class="input">
            <input type="text" asp-for="ShortTitle" required placeholder="Tytuł" />
        </span>
    </p>
    <p>
        <select asp-for="Category">
            <option value="IT">IT</option>
            <option value="rozrywka">rozrywka</option>
            <option value="Picie">Picie</option>
        </select>
    </p>
    <p>
        <span class="input">
            <input asp-for="Localization" required placeholder="Lokalizacja" />
        </span>
    </p>

    <p>
        <div class="date">
            <span class="input">
                <input asp-for="StartDate" required />
            </span>
        </div>
    </p>
    <p>
        <div class="date">
            <span class="input">
                <input asp-for="EndDate" required />
            </span>
        </div>
    </p>
    <p>
        <span class="input">
            <input asp-for="Description" required placeholder="Opis" />
        </span>




    </p>


    <button class="btn btn-light" type="submit">ADD</button>

</form>
<p>
    @ViewBag.Message
</p>



